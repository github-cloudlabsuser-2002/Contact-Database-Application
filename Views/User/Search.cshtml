@model IEnumerable<CRUD_application_2.Models.User>

@{
    ViewBag.Title = "Search";
}

<h2>Search results for "@ViewBag.SearchTerm"</h2>

@if (!Model.Any())
{
    <p>No users found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <!-- Add more columns as needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.ActionLink(user.Name, "Details", new { id = user.Id })</td>
                    <td>@user.Email</td>
                    <!-- Add more cells as needed -->
                </tr>
            }
        </tbody>
    </table>
}
